{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-0728266108eb857c4"
      },
      "us-east-2": {
        "AMI": "ami-0e038a357ec66c8f7"
      },
      "us-west-1": {
        "AMI": "ami-080f77943f1dd5b76"
      },
      "us-west-2": {
        "AMI": "ami-063dfc9a4fe280763"
      },
      "ca-central-1": {
        "AMI": "ami-03dabba1663bf3827"
      },
      "eu-central-1": {
        "AMI": "ami-0b290462135d8d8ca"
      },
      "eu-west-1": {
        "AMI": "ami-07258e560e89a7207"
      },
      "eu-west-2": {
        "AMI": "ami-0dd340db763f77ceb"
      },
      "eu-west-3": {
        "AMI": "ami-03e74f91f2690adad"
      },
      "ap-northeast-1": {
        "AMI": "ami-0de96c54cb64b4e1c"
      },
      "ap-northeast-2": {
        "AMI": "ami-0e93a31e450e71edf"
      },
      "ap-southeast-1": {
        "AMI": "ami-0e22a8efaf73bfe1e"
      },
      "ap-southeast-2": {
        "AMI": "ami-07a099cfb8cc5a756"
      },
      "ap-south-1": {
        "AMI": "ami-090b8171476e1e336"
      },
      "sa-east-1": {
        "AMI": "ami-035c9e756440940ae"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Console instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "ConsoleEIP"
          },
          {
            "Fn::GetAtt": [
              "ConsoleServer",
              "PrivateIp"
            ]
          }
        ]
      }
    }
  }
}
