{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-03872bd1940101e19"
      },
      "us-east-2": {
        "AMI": "ami-0c8aa1537a3d62f71"
      },
      "us-west-1": {
        "AMI": "ami-0b2f5cc97176ca35e"
      },
      "us-west-2": {
        "AMI": "ami-0be06f702f7a5756d"
      },
      "ca-central-1": {
        "AMI": "ami-08a51ba412e6d189c"
      },
      "eu-central-1": {
        "AMI": "ami-0633ab6ba86aa01c2"
      },
      "eu-west-1": {
        "AMI": "ami-0808a061fa04b9106"
      },
      "eu-west-2": {
        "AMI": "ami-054b6e1a4b36fa98f"
      },
      "eu-west-3": {
        "AMI": "ami-0fb4746727ed20a7b"
      },
      "ap-northeast-1": {
        "AMI": "ami-0936f9fa0176b80fd"
      },
      "ap-northeast-2": {
        "AMI": "ami-0943daae63695e1a4"
      },
      "ap-southeast-1": {
        "AMI": "ami-014b9161815b4738c"
      },
      "ap-southeast-2": {
        "AMI": "ami-0193e0a4e654ab7f1"
      },
      "ap-south-1": {
        "AMI": "ami-00c281fc96e121184"
      },
      "sa-east-1": {
        "AMI": "ami-0bb4d1e41561c710a"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Console instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "ConsoleEIP"
          },
          {
            "Fn::GetAtt": [
              "ConsoleServer",
              "PrivateIp"
            ]
          }
        ]
      }
    }
  }
}
