{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-0dc34b5c2e5a94124"
      },
      "us-east-2": {
        "AMI": "ami-0eae2ac2677b3bb1f"
      },
      "us-west-1": {
        "AMI": "ami-076b24d34bac2155a"
      },
      "us-west-2": {
        "AMI": "ami-0d2065e302234147d"
      },
      "ca-central-1": {
        "AMI": "ami-0f0cde7efc2057b75"
      },
      "eu-central-1": {
        "AMI": "ami-05551179541626960"
      },
      "eu-west-1": {
        "AMI": "ami-06ed4a73344088a0d"
      },
      "eu-west-2": {
        "AMI": "ami-018984a79084e0b83"
      },
      "eu-west-3": {
        "AMI": "ami-0d988e9c6f466b475"
      },
      "ap-northeast-1": {
        "AMI": "ami-029be008e776571c6"
      },
      "ap-northeast-2": {
        "AMI": "ami-0a97ade6a2be0db80"
      },
      "ap-southeast-1": {
        "AMI": "ami-0bd9037831da190d3"
      },
      "ap-southeast-2": {
        "AMI": "ami-0fadbb79e817d054a"
      },
      "ap-south-1": {
        "AMI": "ami-0ea06ed1271ef8565"
      },
      "sa-east-1": {
        "AMI": "ami-032727ffc43ccadba"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Console instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "ConsoleEIP"
          },
          {
            "Fn::GetAtt": [
              "ConsoleServer",
              "PrivateIp"
            ]
          }
        ]
      }
    }
  }
}
