{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS ECS with Cluster",
  "Mappings": {
    "ECSAMI": {
      "us-east-2": {
        "AMI": "ami-67ab9e02"
      },
      "us-east-1": {
        "AMI": "ami-5e414e24"
      },
      "us-west-2": {
        "AMI": "ami-10ed6968"
      },
      "us-west-1": {
        "AMI": "ami-00898660"
      },
      "eu-west-3": {
        "AMI": "ami-6fa21412"
      },
      "eu-west-2": {
        "AMI": "ami-42a64325"
      },
      "eu-west-1": {
        "AMI": "ami-880d64f1"
      },
      "eu-central-1": {
        "AMI": "ami-63cbae0c"
      },
      "ap-northeast-2": {
        "AMI": "ami-0acc6e64"
      },
      "ap-northeast-1": {
        "AMI": "ami-e3166185"
      },
      "ap-southeast-2": {
        "AMI": "ami-36867d54"
      },
      "ap-southeast-1": {
        "AMI": "ami-66c98f1a"
      },
      "ca-central-1": {
        "AMI": "ami-4b9c182f"
      },
      "ap-south-1": {
        "AMI": "ami-ca8ad9a5"
      },
      "sa-east-1": {
        "AMI": "ami-69f7b805"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "HostSubnet": {
      "Description": "Subnet to put the ECS Host in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "LoadBalancerSubnets": {
      "Description": "Subnet IDs for the Load Balancer",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "VPC": {
      "Description": "VPC ID that contains the Subnets",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "HostRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "ecs:DeregisterContainerInstance",
                    "ecs:DiscoverPollEndpoint",
                    "ecs:Poll",
                    "ecs:RegisterContainerInstance",
                    "ecs:StartTelemetrySession",
                    "ecs:Submit*",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ],
              "Version": "2012-10-17"
            },
            "PolicyName": "NSolid-Cluster-Host-Policy"
          }
        ],
        "RoleName": "NSolid-Cluster-Host-Role"
      }
    },
    "HostInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "HostRole"
          }
        ],
        "InstanceProfileName": "NSolid-Cluster-Host-InstanceProfile"
      }
    },
    "ServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ecs.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "elasticloadbalancing:DeregisterInstancesFromLoadBalancer",
                    "elasticloadbalancing:DeregisterTargets",
                    "elasticloadbalancing:Describe*",
                    "elasticloadbalancing:RegisterInstancesWithLoadBalancer",
                    "elasticloadbalancing:RegisterTargets"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ],
              "Version": "2012-10-17"
            },
            "PolicyName": "NSolid-Console-Service-Policy"
          }
        ],
        "RoleName": "NSolid-Console-Service-Role"
      }
    },
    "TaskRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ecs-tasks.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ],
              "Version": "2012-10-17"
            },
            "PolicyName": "NSolid-Console-Task-Policy"
          }
        ],
        "RoleName": "NSolid-Console-Task-Role"
      }
    },
    "HostSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Cluster-Hosts",
        "GroupDescription": "Security Group for NSolid ECS Cluster Hosts",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "6753",
            "ToPort": "6753"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "Cluster": {
      "Type": "AWS::ECS::Cluster",
      "Properties": {
        "ClusterName": "NSolid-Cluster"
      }
    },
    "LoadBalancerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console-LoadBalancer",
        "GroupDescription": "Security Group for NSolid Console Load Balancer",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "HealthCheck": {
          "Target": "TCP:9001",
          "HealthyThreshold": "3",
          "UnhealthyThreshold": "4",
          "Interval": "10",
          "Timeout": "5"
        },
        "LoadBalancerName": "NSolid-Console",
        "Listeners": [
          {
            "InstancePort": 6753,
            "InstanceProtocol": "HTTP",
            "LoadBalancerPort": 80,
            "Protocol": "HTTP"
          },
          {
            "InstancePort": 9001,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9001,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9002,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9002,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9003,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9003,
            "Protocol": "TCP"
          }
        ],
        "Scheme": "internet-facing",
        "SecurityGroups": [
          {
            "Ref": "LoadBalancerSecurityGroup"
          }
        ],
        "Subnets": {
          "Ref": "LoadBalancerSubnets"
        }
      }
    },
    "ClusterAutoScalingGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "DependsOn": "ClusterInstances",
      "Properties": {
        "VPCZoneIdentifier": {
          "Ref": "LoadBalancerSubnets"
        },
        "LaunchConfigurationName": {
          "Ref": "ClusterInstances"
        },
        "MinSize": "1",
        "MaxSize": "1",
        "DesiredCapacity": "1",
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Cluster-Host",
            "PropagateAtLaunch": "True"
          }
        ]
      }
    },
    "ClusterInstances": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "IamInstanceProfile": {
          "Ref": "HostInstanceProfile"
        },
        "ImageId": {
          "Fn::FindInMap": [
            "ECSAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "HostSecurityGroup"
          }
        ],
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash -xe\n",
                "echo ECS_CLUSTER=\"NSolid-Cluster\" >> /etc/ecs/ecs.config\n"
              ]
            ]
          }
        }
      }
    },
    "ConsoleTaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "TaskRoleArn": {
          "Ref": "TaskRole"
        },
        "ContainerDefinitions": [
          {
            "Cpu": 256,
            "Essential": "True",
            "Image": "nodesource/nsolid-console:latest",
            "Memory": 256,
            "Name": "nsolid-console",
            "PortMappings": [
              {
                "ContainerPort": "6753",
                "HostPort": "6753",
                "Protocol": "tcp"
              },
              {
                "ContainerPort": "9001",
                "HostPort": "9001",
                "Protocol": "tcp"
              },
              {
                "ContainerPort": "9002",
                "HostPort": "9002",
                "Protocol": "tcp"
              },
              {
                "ContainerPort": "9003",
                "HostPort": "9003",
                "Protocol": "tcp"
              }
            ]
          }
        ]
      }
    },
    "ConsoleService": {
      "Type": "AWS::ECS::Service",
      "DependsOn": "LoadBalancer",
      "Properties": {
        "Cluster": "NSolid-Cluster",
        "DeploymentConfiguration": {
          "MaximumPercent": 200,
          "MinimumHealthyPercent": 100
        },
        "DesiredCount": 1,
        "LoadBalancers": [
          {
            "ContainerName": "nsolid-console",
            "ContainerPort": "6753",
            "LoadBalancerName": {
              "Ref": "LoadBalancer"
            }
          }
        ],
        "ServiceName": "NSolid-Console-Service",
        "TaskDefinition": {
          "Ref": "ConsoleTaskDefinition"
        }
      }
    }
  },
  "Outputs": {
    "ConsoleURL": {
      "Description": "DNS Name of Load Balancer",
      "Export": {
        "Name": "nsolid-console-url"
      },
      "Value": {
        "Fn::GetAtt": [
          "LoadBalancer",
          "DNSName"
        ]
      }
    }
  }
}
