{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS with Classic Elastic Load Balancer",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-08fc8ab1b833cd41c"
      },
      "us-east-2": {
        "AMI": "ami-027e50ad2a5f374fb"
      },
      "us-west-1": {
        "AMI": "ami-005e3ee2824560855"
      },
      "us-west-2": {
        "AMI": "ami-06f9e4f4fcf9e8e6d"
      },
      "ca-central-1": {
        "AMI": "ami-074b4c85ae1f860ba"
      },
      "eu-central-1": {
        "AMI": "ami-017dbfca5d4345a9f"
      },
      "eu-west-1": {
        "AMI": "ami-0463b39c37df00071"
      },
      "eu-west-2": {
        "AMI": "ami-0ead20c21ffb0886c"
      },
      "eu-west-3": {
        "AMI": "ami-049ed316d03c801ff"
      },
      "ap-northeast-1": {
        "AMI": "ami-03d633a6517ed245f"
      },
      "ap-northeast-2": {
        "AMI": "ami-0aafd3d446011a913"
      },
      "ap-southeast-1": {
        "AMI": "ami-01f08f257df59833b"
      },
      "ap-southeast-2": {
        "AMI": "ami-076b1aea99c5ce6dd"
      },
      "ap-south-1": {
        "AMI": "ami-071c5ae93ee293bcf"
      },
      "sa-east-1": {
        "AMI": "ami-08bf999144a2edf5c"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "LoadBalancerSubnets": {
      "Description": "Subnet IDs for the Load Balancer",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "VPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console Instance",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console-LoadBalancer",
        "GroupDescription": "Security Group for NSolid Console Load Balancer",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "HealthCheck": {
          "Target": "TCP:9001",
          "HealthyThreshold": "3",
          "UnhealthyThreshold": "4",
          "Interval": "10",
          "Timeout": "5"
        },
        "LoadBalancerName": "NSolid-Console",
        "Listeners": [
          {
            "InstancePort": 80,
            "InstanceProtocol": "HTTP",
            "LoadBalancerPort": 80,
            "Protocol": "HTTP"
          },
          {
            "InstancePort": 9001,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9001,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9002,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9002,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9003,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9003,
            "Protocol": "TCP"
          }
        ],
        "Scheme": "internet-facing",
        "SecurityGroups": [
          {
            "Ref": "LoadBalancerSecurityGroup"
          }
        ],
        "Subnets": {
          "Ref": "LoadBalancerSubnets"
        }
      }
    },
    "AutoScalingGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "VPCZoneIdentifier": {
          "Ref": "LoadBalancerSubnets"
        },
        "LoadBalancerNames": [
          {
            "Ref": "LoadBalancer"
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "ConsoleInstance"
        },
        "MinSize": "1",
        "MaxSize": "1",
        "DesiredCapacity": "1",
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console",
            "PropagateAtLaunch": "True"
          }
        ]
      }
    },
    "ConsoleInstance": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        }
      }
    }
  },
  "Outputs": {
    "ConsoleURL": {
      "Description": "DNS Name of Load Balancer",
      "Export": {
        "Name": "nsolid-console-url"
      },
      "Value": {
        "Fn::GetAtt": [
          "LoadBalancer",
          "DNSName"
        ]
      }
    }
  }
}
