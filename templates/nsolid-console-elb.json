{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS with Classic Elastic Load Balancer",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-0ed148bfde9b23d70"
      },
      "us-east-2": {
        "AMI": "ami-008f2b4801a930412"
      },
      "us-west-1": {
        "AMI": "ami-0c7820036b13fac6e"
      },
      "us-west-2": {
        "AMI": "ami-034c427ebf2b6ae5a"
      },
      "ca-central-1": {
        "AMI": "ami-0b6c9cfb2fdb75242"
      },
      "eu-central-1": {
        "AMI": "ami-07e7fc7505b2359a0"
      },
      "eu-west-1": {
        "AMI": "ami-037deab2bf7f7004c"
      },
      "eu-west-2": {
        "AMI": "ami-07449b3141d32b362"
      },
      "eu-west-3": {
        "AMI": "ami-04713bf00679de2e2"
      },
      "ap-northeast-1": {
        "AMI": "ami-000744b566b666ec2"
      },
      "ap-northeast-2": {
        "AMI": "ami-05aca7fca912028bc"
      },
      "ap-southeast-1": {
        "AMI": "ami-05af09eebc47414f5"
      },
      "ap-southeast-2": {
        "AMI": "ami-09fbb5ca3fcfdcadb"
      },
      "ap-south-1": {
        "AMI": "ami-0529a23de51acadef"
      },
      "sa-east-1": {
        "AMI": "ami-0f41f559f8852f7bf"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "LoadBalancerSubnets": {
      "Description": "Subnet IDs for the Load Balancer",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "VPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console Instance",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console-LoadBalancer",
        "GroupDescription": "Security Group for NSolid Console Load Balancer",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "HealthCheck": {
          "Target": "TCP:9001",
          "HealthyThreshold": "3",
          "UnhealthyThreshold": "4",
          "Interval": "10",
          "Timeout": "5"
        },
        "LoadBalancerName": "NSolid-Console",
        "Listeners": [
          {
            "InstancePort": 80,
            "InstanceProtocol": "HTTP",
            "LoadBalancerPort": 80,
            "Protocol": "HTTP"
          },
          {
            "InstancePort": 9001,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9001,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9002,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9002,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9003,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9003,
            "Protocol": "TCP"
          }
        ],
        "Scheme": "internet-facing",
        "SecurityGroups": [
          {
            "Ref": "LoadBalancerSecurityGroup"
          }
        ],
        "Subnets": {
          "Ref": "LoadBalancerSubnets"
        }
      }
    },
    "AutoScalingGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "VPCZoneIdentifier": {
          "Ref": "LoadBalancerSubnets"
        },
        "LoadBalancerNames": [
          {
            "Ref": "LoadBalancer"
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "ConsoleInstance"
        },
        "MinSize": "1",
        "MaxSize": "1",
        "DesiredCapacity": "1",
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console",
            "PropagateAtLaunch": "True"
          }
        ]
      }
    },
    "ConsoleInstance": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        }
      }
    }
  },
  "Outputs": {
    "ConsoleURL": {
      "Description": "DNS Name of Load Balancer",
      "Export": {
        "Name": "nsolid-console-url"
      },
      "Value": {
        "Fn::GetAtt": [
          "LoadBalancer",
          "DNSName"
        ]
      }
    }
  }
}
