{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS with Classic Elastic Load Balancer",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-0913defa5da646ad5"
      },
      "us-east-2": {
        "AMI": "ami-06a9a88affe26bbc7"
      },
      "us-west-1": {
        "AMI": "ami-0e8641cee7b93367f"
      },
      "us-west-2": {
        "AMI": "ami-07f342d0359fe11af"
      },
      "ca-central-1": {
        "AMI": "ami-0c8ba6e275caa44c5"
      },
      "eu-central-1": {
        "AMI": "ami-04d7499cf16fc43fc"
      },
      "eu-west-1": {
        "AMI": "ami-0e6661e6ea7ad1a6b"
      },
      "eu-west-2": {
        "AMI": "ami-03244df45913b09d2"
      },
      "eu-west-3": {
        "AMI": "ami-052e7d635dbe244cc"
      },
      "ap-northeast-1": {
        "AMI": "ami-078e66a0a130137c4"
      },
      "ap-northeast-2": {
        "AMI": "ami-02719a22900189ca6"
      },
      "ap-southeast-1": {
        "AMI": "ami-0886b8d9db8892d8a"
      },
      "ap-southeast-2": {
        "AMI": "ami-0fcc2251e78cb4f67"
      },
      "ap-south-1": {
        "AMI": "ami-06edc5266d75cc456"
      },
      "sa-east-1": {
        "AMI": "ami-027d5e42c32879b2d"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "LoadBalancerSubnets": {
      "Description": "Subnet IDs for the Load Balancer",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "VPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console Instance",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console-LoadBalancer",
        "GroupDescription": "Security Group for NSolid Console Load Balancer",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "HealthCheck": {
          "Target": "TCP:9001",
          "HealthyThreshold": "3",
          "UnhealthyThreshold": "4",
          "Interval": "10",
          "Timeout": "5"
        },
        "LoadBalancerName": "NSolid-Console",
        "Listeners": [
          {
            "InstancePort": 80,
            "InstanceProtocol": "HTTP",
            "LoadBalancerPort": 80,
            "Protocol": "HTTP"
          },
          {
            "InstancePort": 9001,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9001,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9002,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9002,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9003,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9003,
            "Protocol": "TCP"
          }
        ],
        "Scheme": "internet-facing",
        "SecurityGroups": [
          {
            "Ref": "LoadBalancerSecurityGroup"
          }
        ],
        "Subnets": {
          "Ref": "LoadBalancerSubnets"
        }
      }
    },
    "AutoScalingGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "VPCZoneIdentifier": {
          "Ref": "LoadBalancerSubnets"
        },
        "LoadBalancerNames": [
          {
            "Ref": "LoadBalancer"
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "ConsoleInstance"
        },
        "MinSize": "1",
        "MaxSize": "1",
        "DesiredCapacity": "1",
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console",
            "PropagateAtLaunch": "True"
          }
        ]
      }
    },
    "ConsoleInstance": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        }
      }
    }
  },
  "Outputs": {
    "ConsoleURL": {
      "Description": "DNS Name of Load Balancer",
      "Export": {
        "Name": "nsolid-console-url"
      },
      "Value": {
        "Fn::GetAtt": [
          "LoadBalancer",
          "DNSName"
        ]
      }
    }
  }
}
