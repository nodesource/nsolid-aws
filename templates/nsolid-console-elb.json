{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS with Classic Elastic Load Balancer",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-0a219e0263774afd3"
      },
      "us-east-2": {
        "AMI": "ami-0baec94c6a16c6a88"
      },
      "us-west-1": {
        "AMI": "ami-060f8fe2595f298e5"
      },
      "us-west-2": {
        "AMI": "ami-0c502725b4943c94e"
      },
      "ca-central-1": {
        "AMI": "ami-078778732a6206d4a"
      },
      "eu-central-1": {
        "AMI": "ami-0328323c225306ac4"
      },
      "eu-west-1": {
        "AMI": "ami-068c73412fbfce010"
      },
      "eu-west-2": {
        "AMI": "ami-08b438e5735642c91"
      },
      "eu-west-3": {
        "AMI": "ami-06e1213e8181fcbc5"
      },
      "ap-northeast-1": {
        "AMI": "ami-0c71689c476d25182"
      },
      "ap-northeast-2": {
        "AMI": "ami-0e2e27c8d13c3b3c3"
      },
      "ap-southeast-1": {
        "AMI": "ami-04b973e5c31d196a9"
      },
      "ap-southeast-2": {
        "AMI": "ami-0a96ebb45a425cf2f"
      },
      "ap-south-1": {
        "AMI": "ami-0440e3bde135eef18"
      },
      "sa-east-1": {
        "AMI": "ami-049830685438ecfd4"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "LoadBalancerSubnets": {
      "Description": "Subnet IDs for the Load Balancer",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "VPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console Instance",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console-LoadBalancer",
        "GroupDescription": "Security Group for NSolid Console Load Balancer",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "HealthCheck": {
          "Target": "TCP:9001",
          "HealthyThreshold": "3",
          "UnhealthyThreshold": "4",
          "Interval": "10",
          "Timeout": "5"
        },
        "LoadBalancerName": "NSolid-Console",
        "Listeners": [
          {
            "InstancePort": 80,
            "InstanceProtocol": "HTTP",
            "LoadBalancerPort": 80,
            "Protocol": "HTTP"
          },
          {
            "InstancePort": 9001,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9001,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9002,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9002,
            "Protocol": "TCP"
          },
          {
            "InstancePort": 9003,
            "InstanceProtocol": "TCP",
            "LoadBalancerPort": 9003,
            "Protocol": "TCP"
          }
        ],
        "Scheme": "internet-facing",
        "SecurityGroups": [
          {
            "Ref": "LoadBalancerSecurityGroup"
          }
        ],
        "Subnets": {
          "Ref": "LoadBalancerSubnets"
        }
      }
    },
    "AutoScalingGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "VPCZoneIdentifier": {
          "Ref": "LoadBalancerSubnets"
        },
        "LoadBalancerNames": [
          {
            "Ref": "LoadBalancer"
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "ConsoleInstance"
        },
        "MinSize": "1",
        "MaxSize": "1",
        "DesiredCapacity": "1",
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console",
            "PropagateAtLaunch": "True"
          }
        ]
      }
    },
    "ConsoleInstance": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        }
      }
    }
  },
  "Outputs": {
    "ConsoleURL": {
      "Description": "DNS Name of Load Balancer",
      "Export": {
        "Name": "nsolid-console-url"
      },
      "Value": {
        "Fn::GetAtt": [
          "LoadBalancer",
          "DNSName"
        ]
      }
    }
  }
}
