{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Runtime in AWS",
  "Mappings": {
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-06722c927790f94ef"
      },
      "us-east-2": {
        "AMI": "ami-025ac0f47e43cc4cb"
      },
      "us-west-1": {
        "AMI": "ami-09032e2f9c9325ab7"
      },
      "us-west-2": {
        "AMI": "ami-0e6473b855baad98e"
      },
      "ca-central-1": {
        "AMI": "ami-087f7279dce23e92f"
      },
      "eu-central-1": {
        "AMI": "ami-071511249bf8c9293"
      },
      "eu-west-1": {
        "AMI": "ami-0b12e529875b0895d"
      },
      "eu-west-2": {
        "AMI": "ami-02022b8156eb9006e"
      },
      "eu-west-3": {
        "AMI": "ami-08cd9520daa4487ff"
      },
      "ap-northeast-1": {
        "AMI": "ami-001f14618d18b2c45"
      },
      "ap-northeast-2": {
        "AMI": "ami-0a52ec54344bd4037"
      },
      "ap-southeast-1": {
        "AMI": "ami-00b8fc30fad7ecfdb"
      },
      "ap-southeast-2": {
        "AMI": "ami-047c76b7067dd0560"
      },
      "ap-south-1": {
        "AMI": "ami-09b820d9154c2375a"
      },
      "sa-east-1": {
        "AMI": "ami-0087a61b454252e68"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Runtime instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "RuntimeIP": {
      "Description": "IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "RuntimeEIP"
          },
          {
            "Fn::GetAtt": [
              "RuntimeServer",
              "PrivateIp"
            ]
          }
        ]
      }
    }
  }
}
