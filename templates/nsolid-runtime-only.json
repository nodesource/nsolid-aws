{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Runtime in AWS",
  "Mappings": {
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-07826620fff78b2f2"
      },
      "us-east-2": {
        "AMI": "ami-0755d3bd4b34755b8"
      },
      "us-west-1": {
        "AMI": "ami-0c26584672dce9884"
      },
      "us-west-2": {
        "AMI": "ami-0e7751b81bbc19373"
      },
      "ca-central-1": {
        "AMI": "ami-098d9a20f9097839e"
      },
      "eu-central-1": {
        "AMI": "ami-0d41ebe32392f012d"
      },
      "eu-west-1": {
        "AMI": "ami-063d6655f17c8a230"
      },
      "eu-west-2": {
        "AMI": "ami-03ac1322c8463d633"
      },
      "eu-west-3": {
        "AMI": "ami-09683d84b3fc299df"
      },
      "ap-northeast-1": {
        "AMI": "ami-052b6eab219c2f926"
      },
      "ap-northeast-2": {
        "AMI": "ami-0a6711956e787200c"
      },
      "ap-southeast-1": {
        "AMI": "ami-021bdfccc5b33a2b3"
      },
      "ap-southeast-2": {
        "AMI": "ami-00b2fc677ba1db65b"
      },
      "ap-south-1": {
        "AMI": "ami-0d13bff436fd4fc91"
      },
      "sa-east-1": {
        "AMI": "ami-0abfc64e54fa5d8c3"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Runtime instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "RuntimeIP": {
      "Description": "IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "RuntimeEIP"
          },
          {
            "Fn::GetAtt": [
              "RuntimeServer",
              "PrivateIp"
            ]
          }
        ]
      }
    }
  }
}
