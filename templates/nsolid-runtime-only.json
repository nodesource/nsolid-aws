{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Runtime in AWS",
  "Mappings": {
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-0913defa5da646ad5"
      },
      "us-east-2": {
        "AMI": "ami-06a9a88affe26bbc7"
      },
      "us-west-1": {
        "AMI": "ami-0e8641cee7b93367f"
      },
      "us-west-2": {
        "AMI": "ami-07f342d0359fe11af"
      },
      "ca-central-1": {
        "AMI": "ami-0c8ba6e275caa44c5"
      },
      "eu-central-1": {
        "AMI": "ami-04d7499cf16fc43fc"
      },
      "eu-west-1": {
        "AMI": "ami-0e6661e6ea7ad1a6b"
      },
      "eu-west-2": {
        "AMI": "ami-03244df45913b09d2"
      },
      "eu-west-3": {
        "AMI": "ami-052e7d635dbe244cc"
      },
      "ap-northeast-1": {
        "AMI": "ami-078e66a0a130137c4"
      },
      "ap-northeast-2": {
        "AMI": "ami-02719a22900189ca6"
      },
      "ap-southeast-1": {
        "AMI": "ami-0886b8d9db8892d8a"
      },
      "ap-southeast-2": {
        "AMI": "ami-0fcc2251e78cb4f67"
      },
      "ap-south-1": {
        "AMI": "ami-06edc5266d75cc456"
      },
      "sa-east-1": {
        "AMI": "ami-027d5e42c32879b2d"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Runtime instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "RuntimeIP": {
      "Description": "IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "RuntimeEIP"
          },
          {
            "Fn::GetAtt": [
              "RuntimeServer",
              "PrivateIp"
            ]
          }
        ]
      }
    }
  }
}
