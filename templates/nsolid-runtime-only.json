{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Runtime in AWS",
  "Mappings": {
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-0010ae3bfd06a438b"
      },
      "us-east-2": {
        "AMI": "ami-04a127da854d2179e"
      },
      "us-west-1": {
        "AMI": "ami-0443f13ecd7d15982"
      },
      "us-west-2": {
        "AMI": "ami-0d7bf0bf3b55f80c8"
      },
      "ca-central-1": {
        "AMI": "ami-0cd821075f45fe533"
      },
      "eu-central-1": {
        "AMI": "ami-0a96518a0893d6f35"
      },
      "eu-west-1": {
        "AMI": "ami-0c246136c18897faf"
      },
      "eu-west-2": {
        "AMI": "ami-0792dad12b1fea343"
      },
      "eu-west-3": {
        "AMI": "ami-021842acf1d15b357"
      },
      "ap-northeast-1": {
        "AMI": "ami-0b1db87cfb179ac03"
      },
      "ap-northeast-2": {
        "AMI": "ami-03d8e079b712d9ae8"
      },
      "ap-southeast-1": {
        "AMI": "ami-08993177296ed3c9e"
      },
      "ap-southeast-2": {
        "AMI": "ami-0bc2d3b23a23dd98d"
      },
      "ap-south-1": {
        "AMI": "ami-0f5ddff75ff86addd"
      },
      "sa-east-1": {
        "AMI": "ami-027e889b073d80ced"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Runtime instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "RuntimeIP": {
      "Description": "IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "RuntimeEIP"
          },
          {
            "Fn::GetAtt": [
              "RuntimeServer",
              "PrivateIp"
            ]
          }
        ]
      }
    }
  }
}
