{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Runtime in AWS",
  "Mappings": {
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-0d2e2094922808b7f"
      },
      "us-east-2": {
        "AMI": "ami-081c38e65e875191d"
      },
      "us-west-1": {
        "AMI": "ami-0092a1c7ca8c3c06f"
      },
      "us-west-2": {
        "AMI": "ami-08a2eaccc778cf679"
      },
      "ca-central-1": {
        "AMI": "ami-020fa6d10d2422f9e"
      },
      "eu-central-1": {
        "AMI": "ami-01e4f455c90003c84"
      },
      "eu-west-1": {
        "AMI": "ami-0c96dff6e7b6b43bc"
      },
      "eu-west-2": {
        "AMI": "ami-05adb4d6896795a81"
      },
      "eu-west-3": {
        "AMI": "ami-0cf9cdf62757a9b19"
      },
      "ap-northeast-1": {
        "AMI": "ami-0e2a3b90fd8474486"
      },
      "ap-northeast-2": {
        "AMI": "ami-080511b7164f1158f"
      },
      "ap-southeast-1": {
        "AMI": "ami-0f1305f1a1fe06177"
      },
      "ap-southeast-2": {
        "AMI": "ami-0efd1b8a306e16ac0"
      },
      "ap-south-1": {
        "AMI": "ami-0314982b28aaf5298"
      },
      "sa-east-1": {
        "AMI": "ami-087e9c9c7298e99ca"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Runtime instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "RuntimeIP": {
      "Description": "IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "RuntimeEIP"
          },
          {
            "Fn::GetAtt": [
              "RuntimeServer",
              "PrivateIp"
            ]
          }
        ]
      }
    }
  }
}
