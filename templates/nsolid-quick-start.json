        "AMI": "ami-4e728a33"
      },
      "us-east-2": {
        "AMI": "ami-47437522"
      },
      "us-west-1": {
        "AMI": "ami-331a0f53"
      },
      "us-west-2": {
        "AMI": "ami-c149deb9"
      },
      "ca-central-1": {
        "AMI": "ami-d35addb7"
      },
      "eu-central-1": {
        "AMI": "ami-432e472c"
      },
      "eu-west-1": {
        "AMI": "ami-ee743997"
      },
      "eu-west-2": {
        "AMI": "ami-47dc3b20"
      },
      "eu-west-3": {
        "AMI": "ami-a169dfdc"
      },
      "ap-northeast-1": {
        "AMI": "ami-def8b7b8"
      },
      "ap-northeast-2": {
        "AMI": "ami-b8fe52d6"
      },
      "ap-southeast-1": {
        "AMI": "ami-fe87d082"
      },
      "ap-southeast-2": {
        "AMI": "ami-f4eb2b96"
      },
      "ap-south-1": {
        "AMI": "ami-ecfba583"
      },
      "sa-east-1": {
        "AMI": "ami-e67d378a"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-3b718946"
      },
      "us-east-2": {
        "AMI": "ami-ae4076cb"
      },
      "us-west-1": {
        "AMI": "ami-301a0f50"
      },
      "us-west-2": {
        "AMI": "ami-7d75e205"
      },
      "ca-central-1": {
        "AMI": "ami-2958df4d"
      },
      "eu-central-1": {
        "AMI": "ami-7a2f4615"
      },
      "eu-west-1": {
        "AMI": "ami-7e773a07"
      },
      "eu-west-2": {
        "AMI": "ami-fed03799"
      },
      "eu-west-3": {
        "AMI": "ami-196bdd64"
      },
      "ap-northeast-1": {
        "AMI": "ami-f8fab59e"
      },
      "ap-northeast-2": {
        "AMI": "ami-d7fd51b9"
      },
      "ap-southeast-1": {
        "AMI": "ami-fa86d186"
      },
      "ap-southeast-2": {
        "AMI": "ami-adeb2bcf"
      },
      "ap-south-1": {
        "AMI": "ami-1cfea073"
      },
      "sa-east-1": {
        "AMI": "ami-107c367c"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
