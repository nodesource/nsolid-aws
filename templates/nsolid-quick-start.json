      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-08fc8ab1b833cd41c"
      },
      "us-east-2": {
        "AMI": "ami-027e50ad2a5f374fb"
      },
      "us-west-1": {
        "AMI": "ami-005e3ee2824560855"
      },
      "us-west-2": {
        "AMI": "ami-06f9e4f4fcf9e8e6d"
      },
      "ca-central-1": {
        "AMI": "ami-074b4c85ae1f860ba"
      },
      "eu-central-1": {
        "AMI": "ami-017dbfca5d4345a9f"
      },
      "eu-west-1": {
        "AMI": "ami-0463b39c37df00071"
      },
      "eu-west-2": {
        "AMI": "ami-0ead20c21ffb0886c"
      },
      "eu-west-3": {
        "AMI": "ami-049ed316d03c801ff"
      },
      "ap-northeast-1": {
        "AMI": "ami-03d633a6517ed245f"
      },
      "ap-northeast-2": {
        "AMI": "ami-0aafd3d446011a913"
      },
      "ap-southeast-1": {
        "AMI": "ami-01f08f257df59833b"
      },
      "ap-southeast-2": {
        "AMI": "ami-076b1aea99c5ce6dd"
      },
      "ap-south-1": {
        "AMI": "ami-071c5ae93ee293bcf"
      },
      "sa-east-1": {
        "AMI": "ami-08bf999144a2edf5c"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
